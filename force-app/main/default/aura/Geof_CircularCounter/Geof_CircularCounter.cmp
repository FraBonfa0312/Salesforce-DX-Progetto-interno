<aura:component implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:hasSObjectName" access="global" >
  
    <aura:attribute name="Legend" type="String" description="Legend to display" default="LÃ©gende"/>
    <aura:attribute name="perText" type="String" default="0" description="Text to display inside circle. It is auto calculated field and used internally." />
    <aura:attribute name="cirDeg" type="String" default="360" description="Degree of Progress to show. It is auto calculated field and used internally." />
    <aura:attribute name="totalProgress" type="String" default="100" description="Total progress. It can be number OR API name of field." />
    <aura:attribute name="actualProgress" type="String" default="100" description="Actual progress. It can be number OR API name of field." />
    <aura:attribute name="theme" type="String" default="#71bf72" description="Theme of Circular Progress Bar. Provide color in format : #71bf72 for green" />
    <aura:attribute name="size" type="String" default="small" description="Size of Circular Progress Bar. Possible values are small, medium, big." />
        <aura:attribute name="iconName" type="String" default="" description="Name of icon to be displayed befor the Legend" />

    
 
    
    <div class="clearFloats slds-align--absolute-center legend" style="white-space: normal; text-align: center" >
        
    </div>
                        <p class="slds-text-color_weak legend clearFloats slds-align--absolute-center" > 
   								
						{!v.Legend}</p>

    
    

    <div class="clearFloats slds-align--absolute-center">
        <!-- <div class="{! ( v.cirDeg >
                    179 ) ? 'container p50plus '+v.theme+' '+v.size : 'container '+v.theme +' '+v.size }"> -->
            <div class="{! ( v.cirDeg >
                    179 ) ? 'container p50plus '+v.size : 'container '+v.size }" >
            <span>{!v.perText}</span> 
            
            
            <div class="slice">
                <div class="bar" style="{! '-webkit-transform: rotate('+v.cirDeg+'deg); -moz-transform: rotate('+v.cirDeg+'deg); -ms-transform: rotate('+v.cirDeg+'deg); -o-transform: rotate('+v.cirDeg+'deg); transform: rotate('+v.cirDeg+'deg); -ms-transform: rotate('+v.cirDeg+'deg); border-color:'+v.theme+';'}"></div>
                <div class="fill" style="{! 'border-color:'+v.theme+';'}"></div>
                
            </div>

        </div>
         <aura:if isTrue="{!v.iconName != ''}">
                                                   <lightning:icon iconName="{!v.iconName}" alternativeText="{!v.Legend}" class="icone" size="small" />
   									</aura:if> 

    </div>
    
</aura:component>