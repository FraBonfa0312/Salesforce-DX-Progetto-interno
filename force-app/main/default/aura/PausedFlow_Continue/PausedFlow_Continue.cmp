<aura:component implements="flexipage:availableForAllPageTypes" access="global" >
    
    <lightning:workspaceAPI aura:id="workspace" />
    
    <aura:attribute name="flowID" type="String" default="" />
    <aura:attribute name="showAsCard" type="Boolean" default="true" access="public" />
    <aura:attribute name="pathTitle" type="String" default="" access="public" />
    
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    
    <lightning:card variant="narrow" title="{!v.pathTitle}">
        <aura:if isTrue="{! !empty(v.flowID)}">
            <lightning:flow aura:id="flowData"/>
            <aura:set attribute="else">
                No Flow ID set!
            </aura:set>
        </aura:if>      
    </lightning:card>
    
</aura:component>