    <ltng:require styles="{!join(',', 
    $Resource.Q_GWScreenBaseCss)}" afterScriptsLoaded="{!c.handlePolicyInfoInit}" />
    <aura:attribute name="coverageStartDate" type="String" />
    <aura:attribute name="oppty" type="Opportunity" default="" />

    <aura:attribute name="vehiclesList" type="list" default=""/>
    <aura:attribute name="driversList" type="list" default=""/>

