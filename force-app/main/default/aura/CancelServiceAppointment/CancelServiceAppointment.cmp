<aura:component controller= "CancelServiceAppointmentCtrl" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	
	<aura:attribute type="boolean" name="truthy" default="false"/>
	<aura:attribute type="String" name="CancellationReason"/>
	<aura:attribute type="Id" name="recordId"/>

	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <h1>Are you sure you want to cancel this Service Appointment?</h1>
    <aura:if isTrue="{!v.truthy}">
		Il record è già stato cancellato(True)
		<lightning:button variant="brand"       disabled="true">Confirm</lightning:button>
    <aura:set attribute="else">

		Cancellation Reason
		<lightning:textarea name="input1" label="Enter some text" />
		
		
	<footer class="slds-modal__footer">
		<button class="slds-button slds-button_neutral" onclick="{!c.doCancelActivity}">
			Back
		</button>
		<lightning:button variant="brand" label="Confirm" title="Confirm" onclick="{! c.handleClick }" />
		<button class="slds-button slds-button_brand" onclick="{!c.doCompleteActivity}">
			Cancel Appointment
		</button>
	</footer>
    </aura:set>
  </aura:if> 
</aura:component>