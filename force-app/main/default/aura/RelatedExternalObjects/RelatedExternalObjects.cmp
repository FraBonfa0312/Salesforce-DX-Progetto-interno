<aura:component controller="GetIntegratedTransactions" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global">
    <aura:handler name="init" action="{!c.myAction}" value="{!this}" />
    <aura:attribute name="myExternalAccountActions" type="map[]" />
    <aura:attribute name="myExternalTransactions" type="map[]" />
    <aura:attribute name="myExternalClaims" type="map[]" />
    
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~Account Actions~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <article class="slds-card slds-card_boundary">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span class="slds-icon_container" title="Account Actions">
                        <span>                
                            <lightning:icon iconName="custom:custom41" size="small"/>
                        </span>
                        <span class="slds-assistive-text">account actions</span>
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Account Actions">
                            <span>Account Actions (4)</span>
                        </a>
                    </h2>
                </div>
                <div class="slds-no-flex">
                    <button class="slds-button slds-button_neutral">New</button>
                </div>
            </header>
        </div>
        <div class="slds-card__body">
            <table class="slds-table slds-table_cell-buffer slds-no-row-hover slds-table_bordered slds-table_fixed-layout" role="grid">
                <thead>
                    <tr class="slds-text-title_caps">
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="ID">ID</div>
                        </th>
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="Type">Status</div>
                        </th>
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="Status">Description</div>
                        </th>
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="Description">Inflow</div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <aura:iteration aura:id="myFive" items="{!v.myExternalAccountActions}" var="myOutput" indexVar="index">
                        <tr>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">
                                    <a href="javascript:void(0);" data-conId123="{!myOutput.Id}"  onclick="{!c.goToExternal}">{!myOutput.ExternalId}</a>
                                </div>
                            </td>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">{!myOutput.Status__c}</div>
                            </td>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">{!myOutput.Description__c}</div>
                            </td>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">{!myOutput.Inflow__c}</div>
                            </td>
                        </tr>
                    </aura:iteration>
                </tbody>
            </table>
        </div>
        <footer class="slds-card__footer">
            <a class="slds-card__footer-action" href="javascript:void(0);">View All
                <span class="slds-assistive-text">View All</span>
            </a>
        </footer>
    </article>
    
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~Transactions~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <article class="slds-card slds-card_boundary">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span class="slds-icon_container" title="Transactions">
                        <span>                
                            <lightning:icon iconName="custom:custom87" size="small"/>
                        </span>
                        <span class="slds-assistive-text">transactions</span>
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Transactions">
                            <span>Transactions (3)</span>
                        </a>
                    </h2>
                </div>
                <div class="slds-no-flex">
                    <button class="slds-button slds-button_neutral">New</button>
                </div>
            </header>
        </div>
        <div class="slds-card__body">
            <table class="slds-table slds-table_cell-buffer slds-no-row-hover slds-table_bordered slds-table_fixed-layout" role="grid">
                <thead>
                    <tr class="slds-text-title_caps">
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="ID">ID</div>
                        </th>
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="Type">Status</div>
                        </th>
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="Status">Description</div>
                        </th>
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="Description">Amount</div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <aura:iteration aura:id="myFive" items="{!v.myExternalTransactions}" var="myOutput" indexVar="index">
                        <tr>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">
                                    <a href="javascript:void(0);" data-conId123="{!myOutput.Id}"  onclick="{!c.goToExternal}">{!myOutput.ExternalId}</a>
                                </div>
                            </td>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">{!myOutput.Status__c}</div>
                            </td>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">{!myOutput.Description__c}</div>
                            </td>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">{!myOutput.Amount__c}</div>
                            </td>
                        </tr>
                    </aura:iteration>
                </tbody>
            </table>
        </div>
        <footer class="slds-card__footer">
            <a class="slds-card__footer-action" href="javascript:void(0);">View All
                <span class="slds-assistive-text">View All</span>
            </a>
        </footer>
    </article>
    
        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~Claims~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <article class="slds-card slds-card_boundary">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span class="slds-icon_container" title="Claims">
                        <span>                
                            <lightning:icon iconName="custom:custom86" size="small"/>
                        </span>
                        <span class="slds-assistive-text">claims</span>
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Claims">
                            <span>Claims (1)</span>
                        </a>
                    </h2>
                </div>
                <div class="slds-no-flex">
                    <button class="slds-button slds-button_neutral">New</button>
                </div>
            </header>
        </div>
        <div class="slds-card__body">
            <table class="slds-table slds-table_cell-buffer slds-no-row-hover slds-table_bordered slds-table_fixed-layout" role="grid">
                <thead>
                    <tr class="slds-text-title_caps">
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="ID">ID</div>
                        </th>
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="Type">Status</div>
                        </th>
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="Status">Description</div>
                        </th>
                        <th scope="col" class="slds-cell-wrap">
                            <div class="slds-truncate" title="Description">Fee</div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <aura:iteration aura:id="myFive" items="{!v.myExternalClaims}" var="myOutput" indexVar="index">
                        <tr>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">
                                    <a href="javascript:void(0);" data-conId123="{!myOutput.Id}"  onclick="{!c.goToExternal}">{!myOutput.ExternalId}</a>
                                </div>
                            </td>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">{!myOutput.Status__c}</div>
                            </td>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">{!myOutput.Description__c}</div>
                            </td>
                            <td data-label="Type" class="slds-cell-wrap">
                                <div class="slds-truncate" title="Type">{!myOutput.Fee__c}</div>
                            </td>
                        </tr>
                    </aura:iteration>
                </tbody>
            </table>
        </div>
        <footer class="slds-card__footer">
            <a class="slds-card__footer-action" href="javascript:void(0);">View All
                <span class="slds-assistive-text">View All</span>
            </a>
        </footer>
    </article>
    
</aura:component>